@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-link">
        <a  class="text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-link">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-link text-white">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-link">
            <a class="text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    
    <li class="nav-link">
            <a class=" text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
