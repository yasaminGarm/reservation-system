@model BeanSceneWebApp.Areas.Administration.Models.Sitting.Edit

@{
    ViewData["Title"] = "Edit";
}

<h3 style="font-family:Arial, Helvetica, sans-serif;">Edit Sitting</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="EditForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SeriesId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
        
         @*   @Html.Hidden("SittingDate")*@
            <div class="form-group">
                <label class="control-label">Start Date Time</label>
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">End Date Time</label>
                <input asp-for="EndDateTime" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Increment Duration in Minute</label>
                <input asp-for="IncrementDuration" class="form-control" min="15" max="120" step="5" />
                <span asp-validation-for="IncrementDuration" class="text-warning"
                      style="font-size: 15px;"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Restaurant Name</label>
                <select asp-for="ResturantId" class="form-control" asp-items="ViewBag.ResturantId"></select>
                <span asp-validation-for="ResturantId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Closed" /> @Html.DisplayNameFor(model => model.Closed)
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">Sitting Type</label>
                <select asp-for="SittingTypeId" class="form-control" asp-items="ViewBag.SittingTypeId"></select>
                <span asp-validation-for="SittingTypeId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Notice" class="control-label"></label>
                <input asp-for="Notice" class="form-control" />
                <span asp-validation-for="Notice" class="text-danger"></span>
            </div>

            <div class="form-group form-check">

                Update Entire Series   <input class="form-check-input" asp-for="IsUpdateSerie" />

            </div>

            <div id="error-message" style="color:red">
                @Html.DisplayTextFor(model => model.errorMessage)
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @*<input onclick="Confirm()" value="Save" class="btn btn-outline-warning" />*@
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        $(function () {
            alert("@ViewBag.Message")
        });
    </script>
}